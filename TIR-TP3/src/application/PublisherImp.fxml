<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PublisherController">
	<children>
		<VBox alignment="TOP_CENTER" layoutX="171.0" prefHeight="500.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label fx:id="lab_pub" alignment="CENTER" prefHeight="40.0" prefWidth="600.0" text="Publisher">
					<font>
						<Font name="Impact" size="30.0" />
					</font>
				</Label>
				<HBox fx:id="hb_pub_status" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Label text="Host">
                                 <font>
                                    <Font name="Bell MT" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tf_broker_host" prefHeight="35.0" prefWidth="200.0" promptText="Enter Publisher Host">
                                 <font>
                                    <Font name="Bell MT" size="16.0" />
                                 </font>
                              </TextField>
                              <Label text="Port">
                                 <font>
                                    <Font name="Bell MT" size="16.0" />
                                 </font>
                              </Label>
                              <Spinner fx:id="sp_broker_connect_port" editable="true" prefHeight="35.0" prefWidth="100.0" />
                              <Button fx:id="btn_broker_connect" mnemonicParsing="false" onAction="#connect2BrokerBTNPushed" prefHeight="35.0" prefWidth="125.0" text="Connect">
                                 <font>
                                    <Font name="Bell MT" size="16.0" />
                                 </font>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
            <Separator prefWidth="200.0" />
            <VBox fx:id="vb_service_manager" prefHeight="200.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0">
                     <children>
                        <Label text="Service Manager :">
                           <font>
                              <Font name="Bell MT" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="600.0" spacing="30.0">
                     <children>
                        <Label text="Temporary">
                           <font>
                              <Font name="Bell MT" size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <Spinner fx:id="sp_temp" prefHeight="35.0" prefWidth="100.0" />
                        <RadioButton fx:id="rb_auto_temp" mnemonicParsing="false" prefHeight="19.0" prefWidth="125.0" text="Auto Temporary">
                           <font>
                              <Font name="Impact" size="14.0" />
                           </font>
                        </RadioButton>
                        <Button mnemonicParsing="false" onAction="#updateTempoBTNPushed" prefHeight="35.0" prefWidth="171.0" text="Update Temporary">
                           <font>
                              <Font name="Bell MT" size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="600.0" spacing="30.0">
                     <children>
                        <Label prefHeight="21.0" prefWidth="75.0" text="Humidity">
                           <font>
                              <Font name="Bell MT" size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <Spinner fx:id="sp_hum" prefHeight="35.0" prefWidth="100.0" />
                        <RadioButton fx:id="rb_auto_hum" mnemonicParsing="false" prefHeight="19.0" prefWidth="125.0" text="Auto Humidity">
                           <font>
                              <Font name="Impact" size="14.0" />
                           </font>
                        </RadioButton>
                        <Button mnemonicParsing="false" onAction="#updateHumBTNPushed" prefHeight="35.0" prefWidth="171.0" text="Update Humidity">
                           <font>
                              <Font name="Bell MT" size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator prefWidth="200.0" />
				<HBox alignment="CENTER" prefHeight="150.0" prefWidth="600.0" spacing="20.0">
					<children>
                  <Label text="Publisher Logs">
                     <font>
                        <Font name="Bell MT" size="16.0" />
                     </font>
                  </Label>
						<ListView fx:id="lv_logs_pub" prefHeight="150.0" prefWidth="443.0" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</AnchorPane>
